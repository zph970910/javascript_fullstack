/* miniprogram/pages/search/search.wxss */
.content {
  width: 100%;
  height: 100%;
}
.header {
  width: 100%;
  height: 100rpx;
  background-color: #f25c81;
  display: flex
}
.header-left{
  flex: 7;
  margin-left: 20rpx;
}
.header-left-icon image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 40rpx;
}
.header-left input {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 25px;
  margin-top: 20rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  color: #aaa;
}
.header-left .on {
  color: #000;
}
.header-right{
  flex: 1;
  margin-left: 50rpx;
  margin-top: 25rpx;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
}
.list{
  margin: 20rpx 0;
}
.list-title{
  font-size: 12px;
  margin-top: 10rpx;
  display: flex;
}
.list-title-left{
  flex:1;
  text-align: left;
  margin-left: 20rpx;
  font-weight: lighter;
  clear: both;
}
.list-title-right {
  flex:1;
  text-align: right;
  margin-right: 20rpx;
  color: #aaa;
  font-weight: lighter;
}
.list-content.unfold {
  width: 100%;
  height: 160rpx;
  overflow: hidden;
}
.list-content {
  width: 100%;
  overflow: hidden;
}
.list-content-block {
  height: 60rpx;
  margin: 10rpx;
  padding: 10rpx;
  float: left;
  text-align: center;
  line-height: 40rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, .05);
  font-size: 14px;
  border-radius: 5px;
}
.top-image {
  width: 96%;
  height: 250rpx;
  border-radius: 5px;
  clear: both;
  text-align: center;
  overflow: hidden;
  margin: 0 auto;
}
.top-image image{
  width: 100%;
  height: 100%;
  position: relative;
}
.list-scroll {
  height: 320rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.clear {
  width: 100%;
  height: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 20rpx;
}
.clear image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 8rpx;
  left: -10rpx;
}
.clear span {
  color: #dbdbdb
}